<% content_for :name_page do %>
  <%= @test.name %>
<% end %>
<section class="container">
	<div class="row">
		<div class="col-xs-12">
			<%= form_tag pages_path, :method => 'post' do %>
			<% @questions.each do |q|%>
				<div class="question">
					<h3><%= q.sentence %></h3>
					<div class="row">
						<div class="col-xs-offset-1 col-xs-2">
							<div class="option0">
								<%= radio_button("question", q.id.to_s, "0", class: "grayborder redborder") %>
								<%= label("question", q.id.to_s + "_0", "0%")%>
							</div>
						</div>						
						<div class="col-xs-2">
							<div class="option1">
								<%= radio_button("question", q.id.to_s, "25", class: "grayborder orangeborder") %>
								<%= label("question", q.id.to_s + "_25", "25%")%>
							</div>
						</div>
						<div class="col-xs-2">
							<div class="option2">
								<%= radio_button("question", q.id.to_s, "50", class: "grayborder yellowborder") %>
								<%= label("question", q.id.to_s + "_50", "50%")%>
							</div>
						</div>
						<div class="col-xs-2">
							<div class="option3">
								<%= radio_button("question", q.id.to_s, "75", class: "grayborder turqoiseborder") %>
								<%= label("question", q.id.to_s + "_75", "75%")%>
							</div>
						</div>
						<div class="col-xs-2">
							<div class="option0">
								<%= radio_button("question", q.id.to_s.to_s, "100", class: "grayborder greenborder") %>
								<%= label("question", q.id.to_s.to_s + "_100", "100%")%>
							</div>
						</div>						
					</div>
				</div>
			<% end %>
			<div class="text-center mt30 col-xs-10 col-xs-offset-1">
				<%= submit_tag "NEXT",  class: "btn btn-info btn-lg btn-block btn-blue" %>
			</div>
			<% end %>
		</div>
	</div>
</section>
