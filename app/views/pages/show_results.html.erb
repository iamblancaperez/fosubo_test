<% content_for :name_page do %>
  <%= @test.name %>
<% end %>

<div class="container ">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h2 class="text-center">Test disponibles</h2>		
			<table class="table table-condensed">
	      <thead>
	        <tr>
	          <th>#</th>
	          <th>Pregunta</th>
	          <th>No. respuestas</th>
	          <th>Promedio</th>
	        </tr>
	      </thead>
	      <tbody>
	      	<% @test.questions.each_with_index do |value,index| %>
		        <tr>
		          <th scope="row"><%= index + 1 %></th>
		          <td><%=value.sentence%></td>
		          <td><%=value.num_answers%></td>
		          <td><%=value.average_for_question%>%</td>
		        </tr>
	        <% end %>
	      </tbody>
	    </table>
		</div>
	</div>
</div>